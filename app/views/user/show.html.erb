<% if @user.beer %>
  <script charset="utf-8">
    var phase = <%=@user.beer.phaseX%>
    var total = <%=@user.beer.total_phases%>
    $(document).ready(function() {
      generateProgressBar(phase,total)
    })
  </script>
<%end%>

<div class = "container-fluid">
  <%= render "layouts/userHeader"%>
  <section class="row text-center">
    <div class="col-md-4">
      <div id="cellar">
        <a href="/user/<%=@user.id%>/beers"><h4>CELLAR</h4></a>
      </div>
    </div>
    <div class="col-md-4">
      <div id="newBrew">
        <a href="/user/<%=@user.id%>/beer/new"><h4>BREW</h4></a>
      </div>
    </div>
    <div class="col-md-4">
      <% if @user.beer %>
        <div id="progress">
          <div id= "progressBarDiv" class="progress">
            <!--the content here is generated by the show.js script and the generateProgressBar()  -->
          </div>
          <h4>your <a href="/user/<%=@user.id%>/beer/<%=@user.beer.id%>/phases"><%= @user.beer.beer_name %></a> is  in process!</h4>
        </div>
      <% else %>
        <div id="noAction">
            <h4>GET BREWIN!</h4>
        </div>
      <%end%>
    </div>
  </section>
</div>
